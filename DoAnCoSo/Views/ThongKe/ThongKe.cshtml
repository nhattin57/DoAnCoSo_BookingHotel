
@{
    ViewBag.Title = "ThongKe";
    Layout = "~/Views/Layouts/AdminLayout.cshtml";
}

<div class="table-title">
    <div class="row">
        <div class="col">
            <h2>Thống kê</h2>
        </div>
    </div>
</div>

<div class="container">

    <div class="form-control">
        <h3>Tổng Doanh Thu: @ViewBag.TongDoanhThu.ToString("#,##") VNĐ</h3>
    </div>

    <div class="form-control">
        <h3>Tổng số đơn dặt phòng: @ViewBag.TongDonDatPhong </h3>
    </div>

    <div class="form-control">
        <h3>Số người đang truy cập: @ViewBag.SoNguoiDangOnline </h3>
    </div>


</div>